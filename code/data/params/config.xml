		<obj>data/objects/MRX22_Recon_Flyer/MRX22_Recon_Flyer.obj</obj>
		-->
		<obj>data/objects/MRX22_Recon_Flyer/MRX22_Recon_Flyer.obj</obj>
		<!--
		<spheres>data/objects/sphere.obj.spheres</spheres>
		<spheres>data/objects/bigguy/bigguy.obj.spheres</spheres>
		<spheres>data/objects/MRX22_Recon_Flyer/MRX22_Recon_Flyer.obj.spheres</spheres>
		-->
		<spheres>data/objects/MRX22_Recon_Flyer/MRX22_Recon_Flyer.obj.spheres</spheres>
		<scale>0.05</scale>
	</object>
	
	<!-- ########################## Devices options ########################## -->
	<devices>
		<front>
			<enable>on</enable>											<!-- on | off								-->
			<id>1</id>																<!-- [int] | auto | manual	-->
			<params>data/params/c910.xml</params>
		</front>
		<back>
			<enable>on</enable>											<!-- on | off								-->
			<id>2</id>																<!-- [int] | auto | manual	-->
			<params>data/params/logitech.xml</params>
		</back>
	</devices>
	
	<!-- ######################## Markers description ######################## -->
	<markers>
		<size>6.0</size>
		<scale>0.786667</scale>
	</markers>
	
	<!-- ############### General parameters of the application ############### -->
	<generalParameters>
	
		<verbose>off</verbose>												<!-- [int] | off | low | high -->
	
		<defaultValues>
			<brightness>-1</brightness>							<!-- -1 for auto							-->
			<gain>-1</gain>														<!-- -1 for auto							-->
			<persistency>10</persistency>
		</defaultValues>
		
		<envmap>
			<path></path>				<!-- [path, data/envmap/0/%03d.jpg] | empty for clean	-->
			<build>on</build>												<!-- on | off									-->
			<size>512 512</size>
			<dual>off</dual>													<!-- on | off									-->
		</envmap>
		
		<localisation>
			<type>dynamic</type>												<!-- dynamic | debug					-->
			<size>400.0</size>												<!-- [float] (0 for infinity) -->
		</localisation>		
		
		<rendering>
			<background>on</background>							<!-- on | off								-->
			<scene>on</scene>													<!-- on | off								-->
			<view>off</view>													<!-- on | off								-->
		</rendering>
		
		<modules>
			<scanner>install/share/libscanner_zbar.so</scanner>
			<video>install/share/libvideodevice_opencv.so</video>
		</modules>
		
	</generalParameters>
	
</opencv_storage>

